<% title t("user_sessions.new.page_title") %>
<hr class="plain"/>
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <div class="span-3 prepend-1">
  <label><%= t("user_sessions.new.login_or_email") %></label>
  </div>
  <div class="span-11 last">
  <%= f.text_field :login %>
  </div>

  <div class="span-3 prepend-1">
  <%= f.label :password %>
  </div>
  <div class="span-11 last">
  <%= f.password_field :password %>
  </div>

  <div class="span-3 prepend-1">
  <%= f.label :remember_me %>
  </div>
  <div class="span-11 last">
  <%= f.check_box :remember_me, :style => "margin-left: 0px;" %>
  </div>
  <br/>
  <div class="prepend-4 span-11 last">
  <%= f.submit t("user_sessions.new.login_button") %>
  or <%= link_to "Register", new_account_path %>
  </div>
  <div class="prepend-8 span-7 last">
    <%= link_to "Forget password?", new_password_reset_path %>
  </div>
  
<% end %>
