<% title t("users.new.page_title") %>
<h3><%= "Registration takes 15 seconds - just fill fields below! No more question asked!" %></h3>
<hr class="plain"/>
<% form_for @user, :url => account_url do |f| %>
  <%= f.error_messages %>
  <div class="span-3 prepend-1">
  <%= f.label :login %>
  </div>
  <div class="span-11 last">
  <%= f.text_field :login %>
  </div>
  <div class="span-3 prepend-1">
  <%= f.label :email %>
  </div>
  <div class="span-11 last">
  <%= f.text_field :email %>
  </div>

  <% if APP_CONFIG[:auto_activate] %>
  <div class="span-3 prepend-1">
  <%= f.label :password %>
  </div>
  <div class="span-11 last">
  <%= f.password_field :password %>
  </div>
  <div class="span-3 prepend-1">
  <%= f.label :password_confirmation %>
  </div>
  <div class="span-11 last">
  <%= f.password_field :password_confirmation %>
  </div>
  <% end %>

  <div class="prepend-4 span-11 last">
  <%= f.submit t("users.new.register_button") %>
  </div>
<% end %>
<hr class="plain"/>
